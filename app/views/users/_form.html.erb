<div>
  <div>
    <%= form_for @user do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>
      <br/>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <br/>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <br/>
      <% if obj == 'new' %>
        <%= f.submit 'Register' %>
      <% else %>
        <%= f.submit 'Update my info' %>
      <% end %>
    <% end %>
  </div>
</div>
