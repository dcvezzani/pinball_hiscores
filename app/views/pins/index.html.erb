<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-md-6">
    <h2>Listing Pinball Tables</h2>
    <ul id="pin_list">
      <%= render @pins %>
    </ul>
  </div>

  <br>

  <div class="col-md-6">
    <h2>Add table to collection</h2>
    <%= form_for(@pin, remote: true) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "pin_info form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :season %>
        <%= f.text_field :season, class: "pin_info", class: "form-control", id: "pin_name" %>
      </div>
      <%= f.submit "Create pinball table", class: "btn btn-primary", id: "submit_pin" %>
    <% end %>
  </div>
</div>
